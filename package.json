{
  "name": "daily-quill",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "sst:dev": "sst dev",
    "sst:predeploy": "turbo run build --filter=@repo/shared --filter=@repo/db --filter=api --filter=client",
    "sst:deploy": "pnpm sst:predeploy && sst deploy",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@pulumi/aws": "^7.15.0",
    "@pulumi/aws-native": "^1.46.0",
    "esbuild-plugin-tsc": "^0.5.0",
    "prettier": "^3.7.4",
    "sst": "^3.17.25",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
